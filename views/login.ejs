<%-include("./partials/header")%>

<!-- Form for login user -->
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h1 style="text-align: center;">LOGIN</h1>
            <!-- Form -->
            <form class="form-example" action="/login" method="POST" onsubmit='disableButton()'>
                <!-- Input fields -->
                <div class="form-group">
                    <input type="email" name="email" placeholder="email" class="form-control username" id="exampleInputEmail1"
                    aria-describedby="emailHelp" required>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="password" class="form-control password"
                    id="exampleInputPassword1" minlength = "5" required>
                </div>
                <button type="submit" class="btn-rounded btn btn-primary btn-block btn-customized" type="submit" id="btn">Login</button>
            </form>
            <!-- Form end -->
            <a style=" float: center;" href="/campGround"><button style="border: none; background-color: transparent;"><span style="color: rgb(0, 125, 241);">Back</span></button></a>
            <a style=" float: right;" href="/campGround/forgot"><button style="border: none; background-color: transparent;"><span style="color: rgb(0, 125, 241);">Forgot Password?</span></button></a>
        </div>
    </div>
</div>

<%-include("./partials/footer")%>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bloomera</title>
  <link rel="shortcut icon" href="/stylesheets/BL-logo2.jpg" type="image/pngx-icon">

  <!-- font stylesheet -->
  <link href="/your-path-to-fontawesome/css/fontawesome.css">
  <link href="/your-path-to-fontawesome/css/brands.css">
  <link href="/your-path-to-fontawesome/css/solid.css">
  <script src="https://kit.fontawesome.com/1a5f7041d2.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Tangerine:wght@700&display=swap" rel="stylesheet">

  <!-- bootstrap stylesheet -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

  <!-- Google Maps API -->
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js'></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet' />

  <!-- custom css stylesheet -->
  <link href="/stylesheets/main.css">
  <link href="/stylesheets/loader.css">

  <!-- JavaScript -->
  <!-- Script for diabling button -->
  <script>
    function disableButton() {
      var btn = document.getElementById('btn');
      btn.disabled = true;
      btn.innerText = 'Loading...'
    }
    function disableButton1() {
        var btn = document.getElementById('btn1');
        btn.disabled = true;
        btn.innerText = 'Loading...'
    }
  </script>
</head>

<body>

  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">

      <!-- For page loading animation -->
      <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
      </div>    
        
      <a class="navbar-brand neonText" href="/campGround"><span style="font-family: Tangerine, cursive, sans-serif;
       font-size: 45px; line-height:30px">Bloomera</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if(!currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href="/login"><strong>Login</strong><span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register"><strong>Register</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/feedback"><strong>Feedback</strong><span class="sr-only">(current)</span></a>
            </li>
            <% }else{ %>
              <li class="nav-item">
                <a class="nav-link" href="/campGround/new"><i class="fas fa-plus-square"></i> <strong>New Post</strong></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <i class="fa fa-user-circle" aria-hidden="true"></i>
                  <strong><%= currentUser.username%></strong>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout"><strong>Logout</strong></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/feedback"><strong>Feedback</strong><span class="sr-only">(current)</span></a>
              </li>
          <% } %>
        </ul>
        </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container" style="margin-top: 10px;">
    <% if(error && error.length> 0){ %>
      <div class="alert alert-danger" role="alert">
        <%=error%>
      </div>
    <% } %>
    <% if(success && success.length> 0){ %>
      <div class="alert alert-success" role="alert">
        <%=success%>
      </div>
    <% } %>
  </div>